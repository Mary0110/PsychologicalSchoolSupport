FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["./Edu/PsychologicalSupportPlatform.Edu.API/PsychologicalSupportPlatform.Edu.API.csproj", "Edu/PsychologicalSupportPlatform.Edu.API/"]
COPY ["./Edu/PsychologicalSupportPlatform.Edu.Infrastructure/PsychologicalSupportPlatform.Edu.Infrastructure.csproj", "Edu/PsychologicalSupportPlatform.Edu.Infrastructure/"]
COPY ["./PsychologicalSupportPlatform.Common/PsychologicalSupportPlatform.Common.csproj", "PsychologicalSupportPlatform.Common/"]
COPY ["./Edu/PsychologicalSupportPlatform.Edu.Application/PsychologicalSupportPlatform.Edu.Application.csproj", "Edu/PsychologicalSupportPlatform.Edu.Application/"]
COPY ["./Edu/PsychologicalSupportPlatform.Edu.Domain/PsychologicalSupportPlatform.Edu.Domain.csproj", "Edu/PsychologicalSupportPlatform.Edu.Domain/"]
RUN dotnet restore "Edu/PsychologicalSupportPlatform.Edu.API/PsychologicalSupportPlatform.Edu.API.csproj"
COPY . .
WORKDIR "/src"
RUN dotnet build "Edu/PsychologicalSupportPlatform.Edu.API/PsychologicalSupportPlatform.Edu.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Edu/PsychologicalSupportPlatform.Edu.API/PsychologicalSupportPlatform.Edu.API.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "PsychologicalSupportPlatform.Edu.API.dll"]
